{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "lib": [
            "es2019",
            "dom"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}